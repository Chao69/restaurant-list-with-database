<form action="/restaurants/{{ restaurant._id }}/edit" method="POST">
  <div class="container">
    <div class="col">
      <div class="row mb-1">
        <div class="form-group">
          <label for="name">Chinese Name</label>
          <input type="text" class="form-control" id="name" name="name" value="{{ restaurant.name }}">
        </div>
      </div>
      <div class="row mb-1">
        <div class="form-group">
          <label for="name_en">English Name</label>
          <input type="text" class="form-control" id="name_en" name="name_en" value="{{ restaurant.name_en }}">
        </div>
      </div>
      <div class="row mb-1">
        <div class="form-group">
          <label for="category">Category</label>
          <input type="text" class="form-control" id="category" name="category" value="{{ restaurant.category }}">
        </div>
      </div>
      <div class="row mb-1">
        <div class="form-group">
          <label for="image">Image URL</label>
          <input type="url" class="form-control" id="image" name="image" value="{{ restaurant.image }}">
        </div>
      </div>
      <div class="row mb-1">
        <div class="form-group">
          <label for="location">Address</label>
          <input type="text" class="form-control" id="location" name="location" value="{{ restaurant.location }}">
        </div>
      </div>
      <div class="row mb-1">
        <div class="form-group">
          <label for="phone">Phone</label>
          <input type="tel" class="form-control" id="phone" name="phone" value="{{ restaurant.phone }}">
        </div>
      </div>
      <div class="row mb-1">
        <div class="form-group">
          <label for="google_map">Google Maps</label>
          <input type="url" class="form-control" id="google_map" name="google_map" value="{{ restaurant.google_map }}">
        </div>
      </div>
      <div class="row mb-1">
        <div class="form-group">
          <label for="rating">Rating</label>
          <input type="number" class="form-control" id="rating" name="rating" min="1" max="5" step="0.1"
            value="{{ restaurant.rating }}">
        </div>
      </div>
      <div class="row mb-2">
        <div class="form-group">
          <label for="description">Description</label>
          <input type="text" class="form-control" id="description" name="description"
            value="{{ restaurant.description }}">
        </div>
      </div>
      <button class="btn btn-major" type="submit">Submit</button>
      <a class="btn btn-major" href="/" role="button">Back</a>
    </div>
  </div>
</form>