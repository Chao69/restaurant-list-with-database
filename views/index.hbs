{{!-- search bar --}}
<div class="container search-bar">
  <div class="d-flex justify-content-end">
    <div class="btn-group">
      <button type="button" class="btn btn-major dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        排序方式
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <div class="dropdown-item disabled">評分排序:</div>
        <a class="dropdown-item" href="/?order=desc&sortBy=rating">由高到低</a>
        <a class="dropdown-item" href="/?order=asc&sortBy=rating">由低到高</a>
        <a class="dropdown-item" href="/?order=asc&sortBy=name">A->Z</a>
        <a class="dropdown-item" href="/?order=desc&sortBy=name">Z->A</a>
      </div>
    </div>
  </div>
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurants/search" method="GET">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <div class="add">
            <a class="btn btn-major" href="/restaurants/add" role="button"><i class="fas fa-plus-square"></i></a>
          </div>
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>



{{!-- restaurant list --}}
<div class="container d-flex justify-content-evenly mt-3">
  <div class="row row-cols-3">
    {{#each restaurants}}
    <div class="col">
      <a class="text-secondary">
        <div class="card mb-3">
          <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{ this.name }}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{ this.category }}
            </div>
            <div class="d-flex justify-content-around">
              <span class="badge bg-danger rounded-pill">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>
              <a href="/restaurants/{{ this._id }}/edit">
                <i class="fas fa-pen fa-lg" style="color:	#AE0000;"></i>
              </a>
              <a href="/restaurants/{{ this._id }}">
                <i class="fas fa-info-circle fa-lg" style="color:	#AE0000;"></i>
              </a>
              <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button class="btn btn-outline p-0" type="submit">
                  <i class="fas fa-trash-alt fa-lg" style="color:	#AE0000;"></i>
                </button>
              </form>
            </div>
          </div>
      </a>
    </div>
  </div>

  {{/each}}
</div>
</div>