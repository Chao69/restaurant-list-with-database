<form action="/restaurants" method="POST">
  <div class="container">
    <div class="col">
      <div class="row mb-1">
          <div class="form-group">
            <label for="name">Chinese Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
          </div>
      </div>
      <div class="row mb-1">
          <div class="form-group">
            <label for="name">English Name</label>
            <input type="text" class="form-control" id="name_en" name="name_en" required>
          </div>
      </div>
      <div class="row mb-1">
          <div class="form-group">
            <label for="name">Category</label>
            <input type="text" class="form-control" id="category" name="category" required>
          </div>
      </div>
      <div class="row mb-1">
          <div class="form-group">
            <label for="name">Image URL</label>
            <input type="url" class="form-control" id="image" name="image" required>
          </div>
      </div>
      <div class="row mb-1">
          <div class="form-group">
            <label for="name">Address</label>
            <input type="text" class="form-control" id="location" name="location" required>
          </div>
      </div>
      <div class="row mb-1">
          <div class="form-group">
            <label for="name">Phone</label>
            <input type="tel" class="form-control" id="phone" name="phone" required>
          </div>
      </div>
      <div class="row mb-1">
          <div class="form-group">
            <label for="name">Google Maps</label>
            <input type="url" class="form-control" id="google_map" name="google_map" required>
          </div>
      </div>
      <div class="row mb-1">
          <div class="form-group">
            <label for="name">Rating</label>
            <input type="number" class="form-control" id="rating" name="rating" min="1" max="5" step="0.1" required>
          </div>
      </div>
      <div class="row mb-2">
          <div class="form-group">
            <label for="name">Description</label>
            <input type="text" class="form-control" id="description" name="description" required>
          </div>
      </div>
      <button class="btn btn-major" type="submit" id="search-button">Submit</button>
    </div>
  </div>
</form>



